    do {
        switch (opcion) {
        case 1:
        cout<<"1. Hamburguesa simple: 3 Bs"<<endl;
        cout<<"Ingrese la cantidad: "; cin>>cantidad;
        break;
        case 2:
        cout<<"2. Hamburguesa con queso: 5 Bs"<<endl;
