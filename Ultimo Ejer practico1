#include <iostream>
using namespace std;

int main()
{
	int opcion, cantidad;
	float suma=0, ingreso, precio;
	do {
		cout << "MENU" << endl;
		cout << "1.Hamburguesa" << endl;
		cout << "2.Hamburguesa con queso" << endl;
		cout << "3. Papas fritas" << endl;
		cout << "4. Soda" << endl;
		cout << "0. Salir" << endl;
		cout << "Ingrese una opcion: ";
		precio = 0;
		cin >> opcion;
		switch (opcion) {
		case 1: precio = 3;
			break;
		case 2: precio = 5;
			break;
		case 3: precio = 2;
			break;
		case 4: precio = 2.5;
			break;
		case 0: cout << "Salir" << endl;
			break;
		default:
			cout << "error" << endl;
		}
		if (precio > 0)
		{
			cout << "ingrese lla cantidad: ";
			cin >> cantidad;
			ingreso = cantidad * precio;
			suma = suma + ingreso;
		}
	} while (opcion != 0);//do-while sale por falso
	cout << "El monto total a pagar es: " << suma;
	}
